{
    "manifest_version": 2,
    "name": "Standups",
    "description": "Collaboration tool for daily stand-ups meetings.",
    "version": "0.0.1",
    "permissions": [
        "tabs",
        "storage"
    ],
    "icons": {
      "16": "img/icon_16x16.png",
      "32": "img/icon_32x32.png",
      "48": "img/icon_48x48.png",
      "64": "img/icon_64x64.png",
      "128": "img/icon_128x128.png",
      "256": "img/icon_256x256.png"
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "browser_action": {
        "default_icon": "img/icon_48x48.png"
    },
    "background": {
        "page": "background.html"
    },
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "css": ["css/font-awesome.css", "css/styles.css"],
            "js": [
                "components/angular/angular.js",
                "components/jquery/dist/jquery.js",
                "components/underscore/underscore.js",
                "js/app.js",
                "js/helpers.js",
                "js/services.js",
                "js/directives.js",
                "js/controllers.js"
            ]
        }
    ],
    "homepage_url": "https://github.com/neti-soft/standups",
    "minimum_chrome_version":"30.x",
    "web_accessible_resources": [
        "fonts/*.*",
        "templates/*.html"
    ]
}
